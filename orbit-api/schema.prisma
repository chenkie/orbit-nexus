datasource db {
  provider = "postgresql"
  url      = "postgresql://ryan:secret@localhost:5432/orbit"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  role      String
  bio       String
  avatar    String
  password  String
}

model InventoryItem {
  id         String @id @default(uuid())
  name       String
  itemNumber String
  unitPrice  Float
  image      String
}
